<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtDetailAcrivity">

    <TextView
        android:id="@+id/detailTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ART DETAIL"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/artImageView"
        android:layout_width="380dp"
        android:layout_height="170dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailTitleTextView"
        tools:srcCompat="@android:drawable/ic_menu_gallery" />

    <EditText
        android:id="@+id/artNamEditTextText"
        android:layout_width="350dp"
        android:layout_height="68dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="ART NAME"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/artImageView"
        app:layout_constraintStart_toStartOf="@+id/artImageView"
        app:layout_constraintTop_toBottomOf="@+id/artImageView" />

    <EditText
        android:id="@+id/artistNamEditTextText"
        android:layout_width="350dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="ARTIST NAME"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/artNamEditTextText"
        app:layout_constraintStart_toStartOf="@+id/artNamEditTextText"
        app:layout_constraintTop_toBottomOf="@+id/artNamEditTextText" />

    <EditText
        android:id="@+id/artYearEditTextText"
        android:layout_width="220dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="YEAR"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/artistNamEditTextText"
        app:layout_constraintStart_toStartOf="@+id/artistNamEditTextText"
        app:layout_constraintTop_toBottomOf="@+id/artistNamEditTextText" />

    <Button
        android:id="@+id/button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/artYearEditTextText"
        app:layout_constraintStart_toStartOf="@+id/artYearEditTextText"
        app:layout_constraintTop_toBottomOf="@+id/artYearEditTextText" />
</androidx.constraintlayout.widget.ConstraintLayout>